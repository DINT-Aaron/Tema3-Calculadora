<Window x:Class="Tema3_Calculadora.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tema3_Calculadora"
        mc:Ignorable="d"
        Title="Calculadora" Icon="assets/128.ico" MinWidth="250" MinHeight="350" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="2.5*"></RowDefinition>
            <RowDefinition Height="4*"></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
        </Grid.RowDefinitions>
        <Border Grid.ColumnSpan="3" Margin="5" BorderThickness="1" BorderBrush="Black">
            <Viewbox IsEnabled="False" HorizontalAlignment="Right">
                <TextBlock x:Name="pantallaTextBlock"></TextBlock>
            </Viewbox>
        </Border>
        <UniformGrid Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Rows="3" Columns="3">
            <Button Tag="1" Click="Button_Click" Margin="5">
                <Viewbox>
                    <TextBlock>1</TextBlock>
                </Viewbox>
            </Button>
            <Button Tag="2" Click="Button_Click" Margin="5">
                <Viewbox>
                    <TextBlock>2</TextBlock>
                </Viewbox>
            </Button>
            <Button Tag="3" Click="Button_Click" Margin="5">
                <Viewbox>
                    <TextBlock>3</TextBlock>
                </Viewbox>
            </Button>
            <Button Tag="4" Click="Button_Click" Margin="5">
                <Viewbox>
                    <TextBlock>4</TextBlock>
                </Viewbox>
            </Button>
            <Button Tag="5" Click="Button_Click" Margin="5">
                <Viewbox>
                    <TextBlock>5</TextBlock>
                </Viewbox>
            </Button>
            <Button Tag="6" Click="Button_Click" Margin="5">
                <Viewbox>
                    <TextBlock>6</TextBlock>
                </Viewbox>
            </Button>
            <Button Tag="7" Click="Button_Click" Margin="5">
                <Viewbox>
                    <TextBlock>7</TextBlock>
                </Viewbox>
            </Button>
            <Button Tag="8" Click="Button_Click" Margin="5">
                <Viewbox>
                    <TextBlock>8</TextBlock>
                </Viewbox>
            </Button>
            <Button Tag="9" Click="Button_Click" Margin="5">
                <Viewbox>
                    <TextBlock>9</TextBlock>
                </Viewbox>
            </Button>
        </UniformGrid>
        <Button Tag="0" Click="Button_Click" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="3" Margin="5" FontSize="30" >0</Button>
    </Grid>
</Window>
